@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<!-- main -->
<div class="main-w3layouts wrapper">
	<h1>Creative SignIn Form</h1>
	<div class="main-agileinfo">
		<div class="agileits-top">
			<form asp-controller="Account" asp-action="Login" method="post">
				<div asp-validation-summary="ModelOnly"></div>
				<br />
				<input asp-for="Email" placeholder="Email">
				<span asp-validation-for="Email" class="text-danger"></span>
				<br />
				<input asp-for="Password" placeholder="Password">
				<span asp-validation-for="Password" class="text-danger"></span>
				<br />
				
				<div class="wthree-text">
					<label class="anim">
						<input asp-for="RememberMe" class="checkbox">
						<span>Remember Me</span>
					</label>
					<div class="clear"> </div>
				</div>
				<input type="submit" value="SIGNIN">
			</form>
			<p>Do not have an Account? <a asp-action="Register"> Register Now!</a></p>
			<p>Forget Your Password? <a asp-action="ForgetPassword"> Reset Your Password Now!</a></p>
		</div>
	</div>
	<!-- copyright -->
	<div class="colorlibcopy-agile">
		<p>© 2018 Colorlib Signup Form. All rights reserved | Design by <a href="https://colorlib.com/" target="_blank">Colorlib</a></p>
	</div>
	<!-- //copyright -->
