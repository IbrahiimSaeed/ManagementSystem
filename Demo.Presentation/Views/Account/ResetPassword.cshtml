@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<!-- main -->
<div class="main-w3layouts wrapper">
	<h1>Creative Reset Password Form</h1>
	<div class="main-agileinfo">
		<div class="agileits-top">
			<form asp-controller="Account" asp-action="ResetPassword" method="post">
				<div asp-validation-summary="ModelOnly"></div>
				<br />
				<input asp-for="NewPassword" placeholder="New Password">
				<span asp-validation-for="NewPassword" class="text-danger"></span>
				<br />
				<input asp-for="ConfirmNewPassword" placeholder="Confirm New Password">
				<span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
				<br />
				<input type="submit" value="Submet">
			</form>
		</div>
	</div>
