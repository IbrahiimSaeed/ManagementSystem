@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4 mb-3 fw-bold text-primary">Employee & Department Management System</h1>
        <p class="lead text-muted mb-4">
            A cleanly architected system built with ASP.NET MVC, Entity Framework, and SQL Server.
            <br />
            Manage your employees and departments efficiently with secure authentication and a modular design.
        </p>

        <div class="d-flex justify-content-center gap-3 mt-4">
            <a class="btn btn-primary btn-lg px-4" href="@Url.Action("Index", "Employee")">
                <i class="bi bi-people-fill me-2"></i> Manage Employees
            </a>
            <a class="btn btn-success btn-lg px-4" href="@Url.Action("Index", "Department")">
                <i class="bi bi-building me-2"></i> Manage Departments
            </a>
        </div>

        <div class="mt-5 text-secondary small">
            <p>Built using modern best practices: 3-Tier Architecture, Repository Pattern, and ASP.NET Identity.</p>
        </div>
    </div>
</div>
