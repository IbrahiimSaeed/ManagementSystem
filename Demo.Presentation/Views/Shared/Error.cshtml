@model ErrorViewModel
@{
    ViewData["Title"] = "Access Denied";
}

<div class="container text-center mt-5">
    <h1 class="display-4 text-danger fw-bold">
        <i class="bi bi-shield-lock-fill"></i> Access Denied
    </h1>

    <p class="lead text-muted mt-3">
        Sorry 😔 you don't have the required role or permission to access this page.
    </p>
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary mt-4">
        <i class="bi bi-house-door"></i> Back to Home
    </a>
</div>

